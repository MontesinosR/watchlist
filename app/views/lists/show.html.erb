<h2><%= @list.name %></h2>

<%= link_to 'Add a bookmark to this list', new_list_bookmark_path(@list) %>

<% @list.bookmarks.each do |bookmark| %>
  <p>Comment - <%= bookmark.comment %></p>
  <p>Movie - <%= bookmark.movie.title %></p>
  <%= link_to "Delete",
            bookmark_path(bookmark),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
  <% end %>
